{% extends 'base.html.twig' %}

{% block title %}Laptop index{% endblock %}

{% block body %}

<div class="index__container"> 

    <div class="index__container-title orange">
        <h1>Liste des portables</h1>
    </div>

    <div class="add__btn-container">

        <a class="index__btn-add" href="{{ path('app_back_material_laptop_new') }}">Ajouter un portable</a>

    </div>

    <div class="index__container-table">

    <div class="spaceFilter__onlyInternalMaterial row d-flex justify-content-center flex-sm-wrap">

        <!--Zone nav filter JS-->
    
    </div>

    <table class="table">
        <thead>
            <tr>
                <th class="mobile__display-none">Id</th>
                <th>Modèle</th>
                <th class="mobile__display-none">Numéro de série</th>
                <th class="mobile__display-none">Mot de passe</th>
                <th class="mobile__display-none">Date d'achat</th>
                <th class="mobile__display-none">Affectation</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for laptop in laptops %}
            {% if laptop.status == "Not Available" %}
                {% if laptop.affectation =="Interne" %}
                    <tr data-status="notAvailable" data-affectation="interne">
                        <td class="mobile__display-none">{{ laptop.id }}</td>
                        <td>{{ laptop.model }}</td>
                        <td class="mobile__display-none">{{ laptop.serialNumber }}</td>
                        <td class="mobile__display-none">{{ laptop.password }}</td>
                        <td class="mobile__display-none">{{ laptop.purchaseDate ? laptop.purchaseDate|date('Y-m-d') : '' }}</td>
                        <td class="mobile__display-none">{{ laptop.affectation }}</td>
                        <td>{{ laptop.status }}</td>
                        <td>
                            <a class="index__btn-show" href="{{ path('app_back_material_laptop_show', {'id': laptop.id}) }}">Voir</a>
                            <a class="index__btn-edit" href="{{ path('app_back_material_laptop_edit', {'id': laptop.id}) }}">Modifier</a>
                        </td>
                    </tr>
                {% endif %}
                {% if laptop.affectation =="Externe" %}
                    <tr data-status="notAvailable" data-affectation="externe" >
                        <td class="mobile__display-none">{{ laptop.id }}</td>
                        <td>{{ laptop.model }}</td>
                        <td class="mobile__display-none">{{ laptop.serialNumber }}</td>
                        <td class="mobile__display-none">{{ laptop.password }}</td>
                        <td class="mobile__display-none">{{ laptop.purchaseDate ? laptop.purchaseDate|date('Y-m-d') : '' }}</td>
                        <td class="mobile__display-none">{{ laptop.affectation }}</td>
                        <td>{{ laptop.status }}</td>
                        <td>
                            <a class="index__btn-show" href="{{ path('app_back_material_laptop_show', {'id': laptop.id}) }}">Voir</a>
                            <a class="index__btn-edit" href="{{ path('app_back_material_laptop_edit', {'id': laptop.id}) }}">Modifier</a>
                        </td>
                    </tr>
                {% endif %}
            {% endif %}
            {% if laptop.status == "Available" %}
                {% if laptop.affectation =="Interne" %}
                    <tr data-status="available" data-affectation="interne" >
                        <td class="mobile__display-none">{{ laptop.id }}</td>
                        <td>{{ laptop.model }}</td>
                        <td class="mobile__display-none">{{ laptop.serialNumber }}</td>
                        <td class="mobile__display-none">{{ laptop.password }}</td>
                        <td class="mobile__display-none">{{ laptop.purchaseDate ? laptop.purchaseDate|date('Y-m-d') : '' }}</td>
                        <td class="mobile__display-none">{{ laptop.affectation }}</td>
                        <td>{{ laptop.status }}</td>
                        <td>
                            <a class="index__btn-show" href="{{ path('app_back_material_laptop_show', {'id': laptop.id}) }}">Voir</a>
                            <a class="index__btn-edit" href="{{ path('app_back_material_laptop_edit', {'id': laptop.id}) }}">Modifier</a>
                        </td>
                    </tr>
                {% endif %}
                {% if laptop.affectation =="Externe" %}
                    <tr data-status="available" data-affectation="externe">
                        <td class="mobile__display-none">{{ laptop.id }}</td>
                        <td>{{ laptop.model }}</td>
                        <td class="mobile__display-none">{{ laptop.serialNumber }}</td>
                        <td class="mobile__display-none">{{ laptop.password }}</td>
                        <td class="mobile__display-none">{{ laptop.purchaseDate ? laptop.purchaseDate|date('Y-m-d') : '' }}</td>
                        <td class="mobile__display-none">{{ laptop.affectation }}</td>
                        <td>{{ laptop.status }}</td>
                        <td>
                            <a class="index__btn-show" href="{{ path('app_back_material_laptop_show', {'id': laptop.id}) }}">Voir</a>
                            <a class="index__btn-edit" href="{{ path('app_back_material_laptop_edit', {'id': laptop.id}) }}">Modifier</a>
                        </td>
                    </tr>
                {% endif %}
            {% endif %}
        {% else %}
            <tr>
                <td colspan="8">Aucuns portables trouvés</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    </div>


</div>

<script src="{{asset('js/navFilterFullMaterial.js')}}"></script>

{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Mouse index{% endblock %}

{% block body %}
    <h1>Mouse index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Model</th>
                <th>Affectation</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for mouse in mice %}
            <tr>
                <td>{{ mouse.id }}</td>
                <td>{{ mouse.model }}</td>
                <td>{{ mouse.affectation }}</td>
                <td>{{ mouse.status }}</td>
                <td>
                    <a href="{{ path('app_back_material_mouse_show', {'id': mouse.id}) }}">show</a>
                    <a href="{{ path('app_back_material_mouse_edit', {'id': mouse.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_back_material_mouse_new') }}">Create new</a>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Material{% endblock %}

{% block body %}
    <h1>Material</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ material.id }}</td>
            </tr>
            <tr>
                <th>Model</th>
                <td>{{ material.model }}</td>
            </tr>
            <tr>
                <th>SerialNumber</th>
                <td>{{ material.serialNumber }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ material.password }}</td>
            </tr>
            <tr>
                <th>PurchaseDate</th>
                <td>{{ material.purchaseDate ? material.purchaseDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Affectation</th>
                <td>{{ material.affectation }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ material.status }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_back_material_index') }}">back to list</a>

    <a href="{{ path('app_back_material_edit', {'id': material.id}) }}">edit</a>


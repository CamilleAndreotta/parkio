{% extends 'base.html.twig' %}

{% block title %}Computer{% endblock %}

{% block body %}
<div class="index__container"> 

    <div class="index__container-title orange">
        <h1>Ordinateur Fixe</h1>
    </div>

    <div class="show__container-table">

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ computer.id }}</td>
            </tr>
            <tr>
                <th>Model</th>
                <td>{{ computer.model }}</td>
            </tr>
            <tr>
                <th>SerialNumber</th>
                <td>{{ computer.serialNumber }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ computer.password }}</td>
            </tr>
            <tr>
                <th>PurchaseDate</th>
                <td>{{ computer.purchaseDate ? computer.purchaseDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ computer.status }}</td>
            </tr>
        </tbody>
    </table>

    <div class="show__container-btn">

        <a class="btn-list" href="{{ path('app_back_material_computer_index') }}">back to list</a>

        <a class="btn-update" href="{{ path('app_back_material_computer_edit', {'id': computer.id}) }}">edit</a>

        {{ include('back/material/computer/_delete_form.html.twig') }}

    </div>

    </div>

</div>
{% endblock %}

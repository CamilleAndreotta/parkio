{% extends 'base.html.twig' %}

{% block title %}Computer{% endblock %}

{% block body %}
    <h1>Computer</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ computer.id }}</td>
            </tr>
            <tr>
                <th>Model</th>
                <td>{{ computer.model }}</td>
            </tr>
            <tr>
                <th>SerialNumber</th>
                <td>{{ computer.serialNumber }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ computer.password }}</td>
            </tr>
            <tr>
                <th>PurchaseDate</th>
                <td>{{ computer.purchaseDate ? computer.purchaseDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Affectation</th>
                <td>{{ computer.affectation }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ computer.status }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_back_material_computer_index') }}">back to list</a>

    <a href="{{ path('app_back_material_computer_edit', {'id': computer.id}) }}">edit</a>

